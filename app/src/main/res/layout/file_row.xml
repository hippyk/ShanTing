<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/dmrow_layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="@drawable/list_item_bg2"
	android:gravity="center_vertical|center_horizontal" android:padding="2dip">
		<LinearLayout android:id="@+id/image_wrapper" 
					  android:layout_height="wrap_content"
					  android:layout_width="wrap_content"
					  android:gravity="center_vertical|center_horizontal" 
					  android:layout_weight="1">
					 
					<TextView 
					    android:id="@+id/file_name"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textAppearance="?android:attr/textAppearanceLarge"
					    android:paddingLeft="6dip"
					    android:paddingRight="6dip"
					    android:textColor="#000000"
						android:singleLine="true" 
						android:layout_weight="1"/>
					 <TextView 
					    android:id="@+id/is_imported"
					    android:layout_height="wrap_content"
					    android:paddingLeft="6dip"
					    android:paddingRight="6dip"
						android:textSize="14sp" 
						android:textColor="#dd111111"
						android:singleLine="true" 
						android:gravity="right" 
						android:layout_width="wrap_content"/>
		</LinearLayout>
</LinearLayout>