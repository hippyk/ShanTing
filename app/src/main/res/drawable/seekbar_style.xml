<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background"
    	android:drawable="@drawable/player_seekbar_bg">
    </item>
    
    
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
               <corners android:radius="5dip" />
               <solid
	        	android:color="#ff7f899d" />
	        	<stroke
		        android:width="1px"
		        android:color="#ff3c3e42"/>
            </shape>
        </clip>
    </item>
    
    
	<item android:id="@android:id/progress">
		<clip>
			<shape>
			<corners android:radius="5dip" />
			<solid
        	android:color="#ff666a70" />
        	<stroke
	        android:width="1px"
	        android:color="#ff3c3e42"/>
			</shape>
			
		</clip>
	</item>
	
	
</layer-list>